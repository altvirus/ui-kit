{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "outDir": "dist",
    "noEmit": true,
    "paths": {}
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"]
}
